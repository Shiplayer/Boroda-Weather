<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="@string/detail_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_info_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/detail_info_icon"
            android:layout_marginTop="8dp"/>
    <com.caverock.androidsvg.SVGImageView
            android:id="@+id/detail_info_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_info_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/detail_info_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_info_temp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/detail_info_icon"
            app:layout_constraintTop_toTopOf="@+id/detail_info_icon"
            app:layout_constraintBottom_toBottomOf="@+id/detail_info_icon"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_info_condition"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_info_icon"
            app:layout_constraintStart_toStartOf="@+id/detail_info_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>